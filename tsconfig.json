{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node"],
    "resolveJsonModule": true,
    "declaration": false,
    "removeComments": true,
    "sourceMap": false,
    "strictNullChecks": false,
    "incremental": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "tests",
    "cost-finder",
    "supplier-finder",
    "sco-optimizer",
    "run.ts",
    "domain-search.ts",
    "exa-client.ts",
    "llm-repair.ts",
    "lovable-enhanced-index.ts"
  ]
}
